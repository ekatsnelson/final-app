<div>
  <div>
    <h1>
      List of all stories
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new story
    </h2>

    <form action="/insert_story" method="post">
      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption">
      </div>

      <div>
        <label for="story_box">
          Story
        </label>

        <textarea id="story_box" name="query_story" rows="3"></textarea>
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <button>
        Create story
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Story
        </th>

        <th>
          Owner
        </th>

        <th>
          Location
        </th>

        <th>
          Image
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_stories.each do |a_story| %>
      <tr>
        <td>
          <%= a_story.id %>
        </td>

        <td>
          <%= a_story.caption %>
        </td>

        <td>
          <%= a_story.story %>
        </td>

        <td>
          <%= a_story.owner_id %>
        </td>

        <td>
          <%= a_story.location %>
        </td>

        <td>
          <%= a_story.image %>
        </td>

        <td>
          <%= a_story.likes_count %>
        </td>

        <td>
          <%= a_story.comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_story.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_story.updated_at) %> ago
        </td>

        <td>
          <a href="/stories/<%= a_story.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
